{% extends "base.twig" %}
{% block body %}
    <div class="container">
        <div class="justify-content-center gurizone-crear p-lg-4 m-lg-3 p-md-4 m-md-3 p-sm-4 m-sm-5">
            <h1 class="text-center text-black-50">EDITAR PRODUCTO</h1>
            <!--RESOLUCION DEL UPDATE-->
            {% if datos_enviados == true and errores is empty %}
            <h3 class="text-success text-center">Actualizaci√≥n exitosa!</h3>
            {% elseif datos_enviados == true and errores is not empty %}
            <h3 class="text-danger text-center">Error en la actualizacion!</h3>
                {% for error in errores %}
                <h5 class="text-danger text-center">{{ error }}</h5>
                {% endfor %}
            {% endif %}
            <!--FIN RESOLUCION DEL UPDATE-->

            <div class="col-md-12 justify-content-center">
                <!--FORMULARIO-->
                <form action="{{ router.generateURL('Producto','editarProducto',{id:producto.getIdProd}) }}" method="post">
                    <div class="p-3 p-lg-5">
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label for="c_text" class="text-black">MODELO <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="c_text" name="modelo" value="{{ producto.getModeloProd }}">
                            </div>
                            <div class="col-md-12">
                                <label for="c_text" class="text-black">MARCA <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="c_text" name="marca" placeholder="" value="{{ producto.getMarcaProd() }}">
                            </div>
                            <div class="col-md-12">
                                <label for="c_text" class="text-black">CATEGORIA <span class="text-danger">*</span></label>
                                <select class="custom-select" name="categoria" id="c_text">
                                    <option value="1" {{ producto.getCategoriaProd ==1 ? 'selected':'' }}>Accesorios</option>
                                    <option value="2" {{ producto.getCategoriaProd ==2 ? 'selected':'' }}>Ropa</option>
                                    <option value="3" {{ producto.getCategoriaProd ==3 ? 'selected':'' }}>Zapatillas</option>
                                </select>
                            </div>
                            <div class="col-md-12">
                                <label for="c_text" class="text-black">SUBCATEGORIA<span class="text-danger">*</span></label>
                                <select class="custom-select" name="subcategoria" id="c_text">
                                    <option value="1" {{ producto.getSubcategoriaProd ==1 ? 'selected':'' }}>Balones</option>
                                    <option value="2" {{ producto.getSubcategoriaProd ==2 ? 'selected':'' }}>Tableros</option>
                                    <option value="3" {{ producto.getSubcategoriaProd ==3 ? 'selected':'' }}>Varios</option>
                                    <option value="4" {{ producto.getSubcategoriaProd ==4 ? 'selected':'' }}>CamisetasNBA</option>
                                    <option value="5" {{ producto.getSubcategoriaProd ==5 ? 'selected':'' }}>Sudaderas</option>
                                    <option value="6" {{ producto.getSubcategoriaProd ==6 ? 'selected':'' }}>Camisetas</option>
                                    <option value="7" {{ producto.getSubcategoriaProd ==7 ? 'selected':'' }}>Caquetas</option>
                                    <option value="8" {{ producto.getSubcategoriaProd ==8 ? 'selected':'' }}>Pantalones</option>
                                    <option value="9" {{ producto.getSubcategoriaProd ==9 ? 'selected':'' }}>Jordan</option>
                                    <option value="10" {{ producto.getSubcategoriaProd ==10 ? 'selected':'' }}>Nike</option>
                                    <option value="11" {{ producto.getSubcategoriaProd ==11 ? 'selected':'' }}>Adidas</option>
                                </select>
                            </div>
                            <div class="col-md-12">
                                <label for="c_text" class="text-black">COLOR<span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="c_text" name="color" placeholder="" value="{{ producto.getColor }}">
                            </div>
                            <div class="col-md-12">
                                <label for="c_text" class="text-black">TALLA<span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="c_text" name="talla" placeholder="" value="{{ producto.getTalla }}">
                            </div>
                            <div class="col-md-12">
                                <label for="c_text" class="text-black">STOCK<span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="c_text" name="stock" placeholder="" value="{{ producto.getStockProd }}">
                            </div>
                            <div class="col-md-12">
                                <label for="c_text" class="text-black">PRECIO <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="c_text" name="precio" placeholder="" value="{{ producto.getPrecioUnidad }}">
                            </div>
                            <div class="col-md-12">
                                <label for="c_text" class="text-black">URL FOTO <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="c_text" name="urlfoto" placeholder="" value="{{ producto.getFotoProd }}">
                            </div>
                            <div class="col-md-12">
                                <label for="c_text" class="text-black">ESTADO <span class="text-danger">*</span></label>
                                <div>
                                    <label class="radio-inline"><input type="radio" name="descatalogado" checked value="0">Dar alta</label>
                                    <label class="radio-inline"><input type="radio" name="descatalogado" value="1">Dar baja</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label for="descripcion" class="text-black">DESCRIPCION </label>
                                <textarea name="descripcion" id="descripcion" cols="30" rows="7" class="form-control">{{ producto.getDescripcion }}</textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-12">
                                <input type="submit" class="btn btn-primary btn-lg btn-block" value="ACTUALIZAR">
                            </div>
                        </div>
                    </div>
                </form>
                <!--FORMULARIO-->
            </div>
        </div>
    </div>
{% endblock %}