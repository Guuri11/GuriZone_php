{% extends "base.twig" %}
{% block body %}
    <div class="container">
        <div class="justify-content-center gurizone-login p-lg-4 m-lg-5 p-md-4 m-md-3 p-sm-4 m-sm-5">
            <h1 class="text-center">Iniciar sesión</h1>
            {% if error{}"" %}
            <p class="" style="color: red">{{ error }}</p>
            {% endif %}
            <form action="{{ router.generateURL('Usuario','login') }}" method="post">
                <div class="form-group">
                    {% if error.formato_email is defined%}
                    <p class="text-danger">{{ error.formato_email }}</p>
                    {% elseif error.email_no_valido is defined %}
                    <p class="text-danger">{{ error.no_valido }}</p>
                
                    <label for="email" class="text-black">Email:</label>
                    <input type="email" class="form-control" id="email" placeholder="" name="email">
                </div>
                <div class="form-group">
                    <label for="pwd" class="text-black">Contraseña:</label>
                    <input type="password" class="form-control" id="password" placeholder="" name="password">
                </div>
                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-primary">Iniciar sesión</button>
                </div>
                <hr/>
                <div>
                    <p class="text-center">¿Eres nuevo en GuriZone?</p>
                </div>
                <div class="text-center">
                    <a href="{{ router.generateURL('Usuario','registrarse') }}"><button type="button" class="btn btn-secondary">Crear tu cuenta en GuriZone</button></a>
                </div>
            </form>
        </div>
    </div>
{% endblock %}